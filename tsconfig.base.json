{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/portfolio/src/*"],
      "@hooks/*": ["packages/hooks/*"],
      "@ui/*": ["packages/ui/src/*"],
      "@styles/*": ["packages/styles/*"],
      "@animations/*": ["packages/animations/*"],
      "@components/*": ["packages/components/*"]
    },
    "strict": true,
    "moduleResolution": "node16",
    "module": "node16",
    "target": "esnext",
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
