{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["../../../assets"],
      "@hooks/*": ["../../packages/hooks/*"],
      "@ui/*": ["../../packages/ui/*"],
      "@styles/*": ["../../packages/styles/*"],
      "@animations/*": ["../../packages/animations/*"],
      "@components/*": ["../../packages/components/*"]
    },
    "strict": true,
    "moduleResolution": "node16",
    "module": "node16",
    "target": "esnext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
