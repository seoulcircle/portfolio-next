{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".", // 꼭 다시 명시
    "paths": {
      "@/*": [
        "./src/*"
      ], // apps/portfolio 기준 경로로 재정의
      "@assets/*": [
        "./src/assets/*"
      ],
      "@hooks/*": [
        "../../packages/hooks/*"
      ],
      "@ui/*": [
        "../../packages/ui/*"
      ],
      "@styles/*": [
        "../../packages/styles/*"
      ],
      "@animations/*": [
        "../../packages/animations/*"
      ],
      "@components/*": [
        "../../packages/components/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
